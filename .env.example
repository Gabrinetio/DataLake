# .env.example - modelo de variáveis do ambiente para Hive Metastore
# Copie para .env (e não committe) ou para /etc/hive/hive.env no servidor de produção.

HIVE_DB_HOST=localhost
HIVE_DB_PORT=3306
HIVE_DB_NAME=metastore
HIVE_DB_USER=hive
HIVE_DB_PASSWORD=<<SENHA_FORTE>>  # Placeholder; substitua por senha do cofre (Vault)
HIVE_INIT_SCHEMA=true
HADOOP_HOME=/opt/hadoop
JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
 
# Superset Database (example - change in production)
SUPERSET_DB_USER=superset
SUPERSET_DB_PASSWORD=CHANGEME_REPLACE_WITH_STRONG_PASSWORD
