# ==========================================
# DataLake Framework - Environment Variables
# ==========================================
# Instructions: Copy this file to .env and update the values.
# WARNING: Do not commit the actual .env file to version control.

# ----------------------------------------------------------------
# 1. Hive Metastore & Database
# ----------------------------------------------------------------
# Configures the connection to the MySQL/Postgres database used by Hive Metastore
HIVE_DB_HOST=localhost
HIVE_DB_PORT=3306
HIVE_DB_NAME=metastore
HIVE_DB_USER=hive
HIVE_DB_PASSWORD=CHANGEME_STRONG_PASSWORD
HIVE_INIT_SCHEMA=true

# Hadoop & Java Paths (Internal container paths)
HADOOP_HOME=/opt/hadoop
JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

# ----------------------------------------------------------------
# 2. Apache Superset
# ----------------------------------------------------------------
# Application secret key (Critical for security)
SUPERSET_SECRET_KEY=CHANGEME_LONG_RANDOM_SECRET_KEY

# Metadata Database (PostgreSQL)
POSTGRES_USER=superset
POSTGRES_PASSWORD=CHANGEME_SUPERSET_PASSWORD
POSTGRES_DB=superset

# ----------------------------------------------------------------
# 3. Object Storage (MinIO / S3)
# ----------------------------------------------------------------
# Credentials for accessing the Data Lake storage (used by Spark & Hive)
S3A_ACCESS_KEY=datalake
# WARNING: This key was found hardcoded in configure_stack.sh.
# If you are using the existing setup, this might be the actual key required.
S3A_SECRET_KEY="iRB;g2&ChZ&XQEW!"
S3A_ENDPOINT=http://minio.gti.local:9000
S3A_PATH_STYLE_ACCESS=true

# Location of the Warehouse in S3
SPARK_WAREHOUSE_PATH=s3a://datalake/warehouse

# ----------------------------------------------------------------
# 4. Kafka Streaming
# ----------------------------------------------------------------
# Broker address and security protocol
KAFKA_BROKER=kafka:9092
# Para acesso externo (fora do Docker), use: localhost:29092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ----------------------------------------------------------------
# 5. Gitea (Version Control)
# ----------------------------------------------------------------
# Configuration for the internal Gitea instance and auto-sync scripts
GITEA_HOST=http://localhost:3000
GITEA_ADMIN_USER=datalake_admin
GITEA_ADMIN_PASS=DatalakeAdmin@2026
GITEA_ADMIN_EMAIL=admin@datalake.local

# ----------------------------------------------------------------
# 6. Trino
# ----------------------------------------------------------------
TRINO_HOST=localhost
TRINO_PORT=8081
TRINO_USER=admin

# ----------------------------------------------------------------
# 7. Docker Stack Configuration
# ----------------------------------------------------------------
# MinIO
MINIO_ROOT_USER=datalake
MINIO_ROOT_PASSWORD=datalake_minio_admin_2026

# MariaDB (Metastore / General Purpose)
MARIADB_ROOT_PASSWORD=mariadb_strong_password
MARIADB_DATABASE=metastore
MARIADB_USER=hive
MARIADB_PASSWORD=hive_password

# Superset Admin
SUPERSET_ADMIN_USER=admin
SUPERSET_ADMIN_PASSWORD=admin

# Gitea DB
GITEA_DB_PASSWORD=gitea_postgres_password
GITEA_SECRET_KEY=gitea_very_secret_key
